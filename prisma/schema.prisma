generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ReportStatus {
  OPEN
  REVIEWED
  DISMISSED
}

enum ModerationInputType {
  COMMENT
  OTHER_REASON
  REPORT
  OWNER_CLAIM
}

enum OwnerClaimStatus {
  PENDING
  IN_REVIEW
  RESOLVED
  REJECTED
}

model User {
  id                  String        @id @default(cuid())
  name                String?
  email               String        @unique
  emailVerified       DateTime?
  image               String?
  role                UserRole      @default(USER)
  shadowBanned        Boolean       @default(false)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  submissions         Submission[]
  reports             Report[]
  moderationLogs      ModerationLog[]
  ownerClaims         OwnerClaim[]  @relation("OwnerClaimRequester")
  createdRestaurants  Restaurant[]  @relation("RestaurantCreator")
  reviewedSubmissions Submission[]  @relation("SubmissionReviewer")
  accounts            Account[]
  sessions            Session[]
}

model Restaurant {
  id                    String       @id @default(cuid())
  name                  String
  city                  String
  cuisine               String
  address               String?
  saraftiScore          Float        @default(0)
  communityNegativeRate Float        @default(0)
  totalSubmissions      Int          @default(0)
  averageRating         Float?
  topIssues             Json?
  softDeleted           Boolean      @default(false)
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  createdById           String?
  createdBy             User?        @relation("RestaurantCreator", fields: [createdById], references: [id], onDelete: SetNull)
  submissions           Submission[]
  reports               Report[]
  ownerClaims           OwnerClaim[]

  @@unique([name, city])
  @@index([city])
  @@index([cuisine])
  @@index([softDeleted, totalSubmissions])
}

model Submission {
  id               String           @id @default(cuid())
  userId           String
  restaurantId     String
  reasons          String[]
  otherReason      String?          @db.VarChar(120)
  comment          String?          @db.VarChar(200)
  rating           Int?
  status           SubmissionStatus @default(PENDING)
  moderationPassed Boolean          @default(false)
  deletedAt        DateTime?
  approvedAt       DateTime?
  rejectedAt       DateTime?
  reviewerId       String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant       Restaurant       @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  reviewer         User?            @relation("SubmissionReviewer", fields: [reviewerId], references: [id], onDelete: SetNull)
  reports          Report[]
  moderationLogs   ModerationLog[]

  @@unique([userId, restaurantId])
  @@index([restaurantId, status, deletedAt])
  @@index([createdAt])
}

model Report {
  id             String       @id @default(cuid())
  userId         String
  restaurantId   String?
  submissionId   String?
  reason         String       @db.VarChar(120)
  details        String?      @db.VarChar(200)
  status         ReportStatus @default(OPEN)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant     Restaurant?  @relation(fields: [restaurantId], references: [id], onDelete: SetNull)
  submission     Submission?  @relation(fields: [submissionId], references: [id], onDelete: SetNull)
  moderationLogs ModerationLog[]

  @@index([status, createdAt])
  @@index([restaurantId])
}

model ModerationLog {
  id               String              @id @default(cuid())
  submissionId     String?
  reportId         String?
  ownerClaimId     String?
  userId           String?
  inputType        ModerationInputType
  content          String
  flagged          Boolean
  model            String
  categories       Json?
  providerResponse Json?
  createdAt        DateTime            @default(now())
  submission       Submission?         @relation(fields: [submissionId], references: [id], onDelete: SetNull)
  report           Report?             @relation(fields: [reportId], references: [id], onDelete: SetNull)
  ownerClaim       OwnerClaim?         @relation(fields: [ownerClaimId], references: [id], onDelete: SetNull)
  user             User?               @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([flagged, createdAt])
  @@index([inputType, createdAt])
}

model OwnerClaim {
  id             String           @id @default(cuid())
  restaurantId   String
  requestedById  String?
  requesterName  String           @db.VarChar(120)
  requesterEmail String
  relationship   String           @db.VarChar(120)
  message        String           @db.VarChar(500)
  status         OwnerClaimStatus @default(PENDING)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  restaurant     Restaurant       @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  requestedBy    User?            @relation("OwnerClaimRequester", fields: [requestedById], references: [id], onDelete: SetNull)
  moderationLogs ModerationLog[]

  @@index([status, createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
